<Application x:Class="WpfAppOpenCV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppOpenCV"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Font -->
        <FontFamily x:Key="Openhuninn">pack://application:,,,/Resources/jf-openhuninn-2.0.ttf#jf open 粉圓 2.0</FontFamily>
        <!-- Button -->
        <Style TargetType="Button" x:Key="btnNormal">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        </Style>
        <!-- TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        </Style>
        <!-- TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="0,3,0,3" />
        </Style>
        <!-- MenuItem -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="6" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        </Style>
    </Application.Resources>
</Application>
